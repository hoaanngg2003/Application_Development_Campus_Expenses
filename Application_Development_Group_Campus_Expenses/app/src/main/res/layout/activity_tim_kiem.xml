<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.lvc.quanlychitieu.TimKiemActivity">
    <include layout="@layout/custom_toolbar2"
        android:id="@+id/toolbar_timkiem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        />
    <com.google.android.material.tabs.TabLayout
        app:tabTextColor="@color/colorWhite"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/toolbar_timkiem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tl_timKiem"/>
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tl_timKiem"
        android:id="@+id/vp_timKiem"/>
</RelativeLayout>